{
    "tasks": [
        {
            "label": "C/C++: g++.exe build active file",
            "type": "cppbuild",
            "command": "D:/Dev/Lag/mingw64/bin/g++.exe", // g++.exe 컴파일러 자체를 command로 지정
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-finput-charset=UTF-8", // 소스 코드를 UTF-8로 읽도록 지정
                "-fexec-charset=EUC-KR" // 실행 파일의 출력을 CP949로 인코딩하도록 지정 (선택사항, 한글 깨짐 방지용)
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "컴파일러: D:/Dev/Lag/mingw64/bin/g++.exe"
        }
    ],
    "version": "2.0.0"
}